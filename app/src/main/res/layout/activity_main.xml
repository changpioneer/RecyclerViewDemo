<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.pioneer.demomap.activity.MainActivity">

    <Button
        android:id="@+id/btn_simple_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="简单RecyclerView案例"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="StickRecyclerViewActivity"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_recycler1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="PowerfulStickRecyclerViewActivity"
        android:textSize="20sp" />

</LinearLayout>
